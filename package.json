{
  "name": "fractioncalc",
  "version": "1.6.5",
  "description": "FractionCalc",
  "main": "main.js",
  "author": "Ashyraffa and Ratu",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "npx electron-builder --win nsis --x64 --arm64",
    "build:linux": "electron-builder --linux deb AppImage"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "productName": "FractionCalc",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "fractioncalc.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt",
      "perMachine": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "category": "Utility",
      "maintainer": "Ashyraffa and Ratu",
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "fractioncalc.png",
      "description": "A simple fraction calculator for Linux"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "astral-regex": "^2.0.0"
  }
}
